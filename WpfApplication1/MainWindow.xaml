<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Canvas x:Name="canvas"/>
        <Button Content="Draw" Click="DrawButton_Click" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10"/>
        <TextBox x:Name="iterationTextBox" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="70,0,0,10"/>
        <TextBlock Text="Iterations:" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10,0,0,10"/>
    </Grid>
</Window>
